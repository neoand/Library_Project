<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Author List View -->
    <record id="res_partner_author_view_list" model="ir.ui.view">
        <field name="name">res.partner.author.view.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Authors">
                <field name="name"/>
                <field name="book_count"/>
                <field name="first_publication"/>
                <field name="last_publication"/>
                <field name="website"/>
            </list>
        </field>
    </record>

    <!-- Removida a segunda definição duplicada de "Author Details" -->
    <!-- A visualização de autor agora usa apenas a definição em partner_view.xml -->
</odoo>
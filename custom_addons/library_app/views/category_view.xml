<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List (Odoo 17/18 usam <list>) -->
    <record id="view_list_library_category" model="ir.ui.view">
        <field name="name">library.book.category.list</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <list string="Book Categories"
                  decoration-primary="book_count &gt; 0"
                  decoration-muted="book_count == 0">
                <field name="name" string="Category Name"/>
                <field name="code" string="Technical Code"/>
                <field name="book_count" string="Book Count" widget="statinfo"/>
                <field name="create_date" string="Created on" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Form com chatter -->
    <record id="view_form_library_category" model="ir.ui.view">
        <field name="name">library.book.category.form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form string="Book Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="book_count" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Books">
                            <field name="book_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter (requer _inherit = ['mail.thread', 'mail.activity.mixin']) -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Ação e menu (se ainda não tiver) -->
    <record id="action_library_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Opcional: posicione no menu do seu app -->
    <!--
    <menuitem id="menu_library_root" name="Library"/>
    <menuitem id="menu_library_categories" name="Categories"
              action="action_library_category" parent="menu_library_root"/>
    -->

</odoo>